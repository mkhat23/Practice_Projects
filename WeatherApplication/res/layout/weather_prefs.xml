<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/loc_title" >

        <Preference
            android:key="swa_loc"
            android:title="@string/pref_location_title" >

            <intent
                android:targetClass="com.mandeepk.weatherapplication.CityFinderActivity"
                android:targetPackage="com.mandeepk.weatherapplication" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_unit_title" >

        <ListPreference
            android:defaultValue="c"
            android:entries="@array/unit_names"
            android:entryValues="@array/unit_values"
            android:key="swa_temp_unit"
            android:title="@string/temp_title" />
    </PreferenceCategory>

</PreferenceScreen>